block content
      // ==============================================================
      // Start right Content here
      // ==============================================================
      .content-page
        // Start content
        .content
          .container
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  ol.breadcrumb.pull-right
                    li
                      a(href='#') Home
                    li
                      a(href='#') SD기본정보
                    li.active 회사정보관리
                  h4.page-title 회사정보 목록
            .row
              .col-sm-12
                .card-box
                  .btn-toolbar.form-group
                    .pull-right
                      a.btn.btn-default.waves-effect.waves-light.m-l-5(href='/company/new')
                        i.fa.fa-plus
                        |  추가
                      //-button.btn.btn-primary.waves-effect.waves-light.m-l-5(id='btnExport' onclick="fnTableToExcel(document.getElementById('dvData'));") 
                        i.fa.fa-download
                        |  Excel
                      //-button.btn.btn-success.waves-effect.waves-light.m-l-5(onclick="getJsonData();") 
                        i.fa.fa-arrow-circle-o-down
                        |  JsonData
                  table.table.table-hover(id='dvData' data-tablesaw-mode='swipe')
                    thead
                      tr
                        th(width='16%') 회사명
                        th(width='10%') 대표자명
                        th 주소
                        th(width='14%') TEL
                        th(width='14%') FAX
                    tbody
                        - if (company.length > 0) {
                            // - for( var i = 0 ; length = question.length > i ; i++ ){ //속도가 빠르다고 알고 있음.
                            - for( var i in company ){ //속도가 느리다고 알고 있음.
                                tr(onclick="onclick=location.href='/company/#{company[i]._id}/show'")
                                    td  #{company[i].company_nm}  
                                    td.highlight(data-highlight='search.highlight.title') #{company[i].ceo_nm}
                                    td #{company[i].addr}
                                    td #{company[i].tel_no}
                                    td #{company[i].fax_no}
                            - }
                        - }else{
                            tr
                                td(colspan='5' align='center') 조회된 데이타가 없습니다.
                        - }  
                    iframe#txtArea1(style='display:none')
            // end row
          // end container
        // end content
        footer.footer.text-right
          | 2017 © ISU Group.

extends ../layouts/default
block head
            script(src='/vendor/jquery/jquery.min.js')
            script(src='/isu/js/download.js')
            
block content
    .content
        .container
            p
            | #{JsonData}
            .row(style='margin-top:20px')
                .col-xs-12.col-sm-10.col-md-8
                    h3.masthead-brand 회사정보 > 목록
                    hr.colorgraph      
            br
            .row(style='margin-left:30px;margin-top:-15px')
                a.button.btn.btn-primary.btn-sm(href='/company/new') 추가      
                button.btn.btn-primary.btn-sm.btn-info(id='btnExport' onclick="fnTableToExcel(document.getElementById('dvData'));") ExcelDownload
                button.btn.btn-primary.btn-sm.btn-info(onclick="getJsonData();") JsonDataDownload
            br         
            .row
                .col-xs-12.col-sm-10.col-md-8       
                    p.text-muted.font-13
                        | 
                    table.tablesaw.table.m-b-0(id='dvData' data-tablesaw-mode='swipe')
                        thead
                        tr
                            th.title(scope='col', data-tablesaw-sortable-col='', data-tablesaw-priority='persist') 회사명
                            th(scope='col', data-tablesaw-sortable-col='', data-tablesaw-sortable-default-col='', data-tablesaw-priority='3') 대표자명
                            th(scope='col', data-tablesaw-sortable-col='', data-tablesaw-priority='2') 주소
                            th(scope='col', data-tablesaw-sortable-col='', data-tablesaw-priority='1') TEL
                            th(scope='col', data-tablesaw-sortable-col='', data-tablesaw-priority='4') FAX
                        tbody
                        - if (company.length > 0) {
                            // - for( var i = 0 ; length = question.length > i ; i++ ){ //속도가 빠르다고 알고 있음.
                            - for( var i in company ){ //속도가 느리다고 알고 있음.
                                tr(onclick="onclick=location.href='/company/#{company[i]._id}/show'")
                                    td  #{company[i].com_nm}  
                                    td.highlight(data-highlight='search.highlight.title') #{company[i].ceo_nm}
                                    td #{company[i].addr}
                                    td #{company[i].telno}
                                    td #{company[i].faxno}
                            - }
                        - }else{
                            tr
                                td(colspan='5' align='center') 조회된 데이타가 없습니다.
                        - }  
                    iframe#txtArea1(style='display:none')



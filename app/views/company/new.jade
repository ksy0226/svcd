extends ../layouts/default
block head
            script(src='/isu/js/postcode.js')
            script(src='http://dmaps.daum.net/map_js_init/postcode.v2.js')
    
block content
    .content
            .container
                .row(style='margin-top:20px')
                    .col-xs-12.col-sm-10.col-md-8
                        h3.masthead-brand 회사정보관리
                        hr.colorgraph
                form.form.col-md-12.center-block(name='form' action='/company/new' method='post')        
                    .row(style='margin-top:-15px')
                        .col-xs-1.col-sm-1.col-md-1.col-sm-offset-7.col-md-offset-7
                            .form-group
                                    button.btn.btn-success.btn-sm.btn-block(type='submit') 저장
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[com_cd]', placeholder='회사코드')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[com_nm]', placeholder='회사명')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[type]', placeholder='업태')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[ceo_nm]', placeholder='대표이사명')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[telno]', placeholder='전화번호')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', name='company[faxno]', placeholder='팩스번호')
                    .row(style='margin-left:30px')
                        .col-xs-3.col-sm-3.col-md-3
                            .form-group
                                input.form-control.input-sm(type='text', id='zip_cd' name='company[zip_cd]', placeholder='우편번호')
                    .row(style='margin-left:30px')
                        .col-xs-6.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-sm(type='text', id='addr' name='company[addr]', placeholder='회사주소1' readonly)
                                span.btn.btn-sm.btn-primary(style='margin-top:10px', id='postcode' ) 우편번호 찾기
                    .row(style='margin-left:30px')
                        .col-xs-6.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-sm(type='text', id='addr2' name='company[addr2]', placeholder='회사주소2')
                    .row(style='margin-left:30px')
                        .col-xs-6.col-sm-6.col-md-6
                            .form-group
                                input.form-control.input-sm(type='text', name='company[bigo]', placeholder='비고')
                    
                    
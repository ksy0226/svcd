extends ../layouts/default

block content
    .content
        .container
            .row(style='margin-top:20px')
                .col-xs-12.col-sm-10.col-md-8
                    h3.masthead-brand 회사정보 > 수정하기
                    hr.colorgraph
            br
            .row(style='margin-left:30px;margin-top:-15px')
                button.btn.btn-primary.btn-sm.btn-signup(onclick="location.href='/company/list'") 목록      
                button.btn.btn-primary.btn-sm.btn-info(onclick="location.href='/company/#{company._id}/edit'") 수정
                button.btn.btn-primary.btn-sm.btn-danger(onclick="location.href='/company/#{company._id}/delete'") 삭제     
            br
            form.form.col-md-12.center-block(name='form' action='/company/#{company._id}/edit' method='post')     
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[com_cd]', value='#{company.com_cd}', placeholder='회사코드')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[com_nm]', value='#{company.com_nm}', placeholder='회사명')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[type]', value='#{company.type}',placeholder='업태')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[ceo_nm]', value='#{company.ceo_nm}', placeholder='대표이사명')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[telno]', value='#{company.telno}', placeholder='전화번호')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[faxno]', value='#{company.faxno}',placeholder='팩스번호')
                .row(style='margin-left:30px')
                    .col-xs-3.col-sm-3.col-md-3
                        .form-group
                            input.form-control.input-sm(type='text', name='company[zip_cd]', value='#{company.zip_cd}',placeholder='우편번호')
                .row(style='margin-left:30px')
                    .col-xs-6.col-sm-6.col-md-6
                        .form-group
                            input.form-control.input-sm(type='text', name='company[addr]', value='#{company.addr}',placeholder='회사주소1')
                .row(style='margin-left:30px')
                    .col-xs-6.col-sm-6.col-md-6
                        .form-group
                            input.form-control.input-sm(type='text', name='company[addr2]', value='#{company.addr2}',placeholder='회사주소2')
                .row(style='margin-left:30px')
                    .col-xs-6.col-sm-6.col-md-6
                        .form-group
                            input.form-control.input-sm(type='text', name='company[bigo]', value='#{company.bigo}',placeholder='비고')
                .row
                    button.btn.btn-success.btn-sm(type='submit') 저장  
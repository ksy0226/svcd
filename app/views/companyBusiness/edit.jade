extends ../layouts/default
block head
    script(type='text/javascript').
        var companyBusinessObj = !{JSON.stringify(companyBusiness).replace(/<\//g, '<\\/')};
    script(src='/isu/js/companyBusiness/edit.js')

block content
      .content-page
        .content
          .container
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  ol.breadcrumb.pull-right
                    li
                      a(href='#') Home
                    li
                      a(href='#') SD기본정보
                    li.active 하위업무 수정
                  h4.page-title 하위업무 수정
            .row
              .col-sm-12
                .card-box
                  .p-20
                    .btn-toolbar.form-group
                      form.form-horizontal.group-border-dashed(id='companyBusinessForm' name='form' action='/companyBusiness/edit/#{companyBusiness._id}' method='post')
                        .form-group
                            .pull-left
                                .btn.btn-primary.waves-effect.waves-light.m-l-5(onclick="location.href='/companyBusiness'")
                                    i.fa.fa-list-ul
                                    |  목록
                                .btn.btn-primary.waves-effect.waves-light.m-l-5(onclick="location.href='/companyBusiness/delete/#{companyBusiness._id}'") 
                                    i.fa.fa-remove
                                    |  삭제
                                .btn.btn-purple.waves-effect.waves-light.m-l-5(onclick="location.href='/companyBusiness'")
                                    i.fa.fa-undo
                                    |  취소
                            .pull-right
                                button.btn.btn-info(type='submit')
                                    i.fa.fa-send-o
                                    |  저장
                        hr
                        .form-group(style='display:none')
                            label.col-sm-3.control-label 상위업무코드
                            .col-sm-3
                                input.form-control(name='companyBusiness[higher_cd]', type='text', placeholder='', value='#{companyBusiness.higher_cd}', disabled)
                        .form-group
                            label.col-sm-3.control-label 상위업무명
                            .col-sm-3
                                input.form-control(name='companyBusiness[higher_nm]', type='text', value='#{companyBusiness.higher_nm}', disabled)
                        .form-group
                            label.col-sm-3.control-label 하위업무코드
                            .col-sm-3
                                input.form-control(name='companyBusiness[lower_cd]', type='text', value='#{companyBusiness.lower_cd}')
                        .form-group
                            label.col-sm-3.control-label 하위업무명
                            .col-sm-3
                                input.form-control(name='companyBusiness[lower_nm]', type='text', value='#{companyBusiness.lower_nm}')
                        .form-group
                            label.col-sm-3.control-label 설명
                            .col-sm-9
                                input.form-control(name='companyBusiness[description]', type='text', value='#{companyBusiness.description}')
                        .form-group
                            label.col-sm-3.control-label 소요시간
                            .col-sm-3
                                input.form-control(name='companyBusiness[need_hour]', type='text', value='#{companyBusiness.need_hour}')
                        .form-group(style='display:none')
                            label.col-sm-3.control-label 회사코드
                            .col-sm-3
                                input.form-control(name='companyBusiness[company_cd]', type='text', value='#{companyBusiness.company_cd}')
                        .form-group(style='display:none')
                            label.col-sm-3.control-label 회사명
                            .col-sm-3
                                input.form-control(name='companyBusiness[company_nm]', type='text', value='#{companyBusiness.company_nm}')
                        .form-group(style='display:none')
                            label.col-sm-3.control-label 사번
                            .col-sm-3
                                input.form-control(name='companyBusiness[sabun]', type='text', value='#{companyBusiness.sabun}')
                        .form-group(style='display:none')
                            label.col-sm-3.control-label 등록자
                            .col-sm-3
                                input.form-control(name='companyBusiness[user_nm]', type='text', value='#{companyBusiness.user_nm}')
                        .form-group
                            label.col-sm-3.control-label 사용여부
                            .col-sm-3
                                select.form-control.input-sm(id='user_flag', name='companyBusiness[user_flag]')
                                    option(value='사용' Selected) 사용 
                                    option(value='미사용') 미사용
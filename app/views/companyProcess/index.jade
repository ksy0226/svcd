extends ../layouts/default
block head
    script(src='/vendor/jquery/jquery.min.js')
    script(src='/plugins/multiselect/js/jquery.multi-select.js', type='text/javascript')
    link(type='text/css', href='/plugins/multiselect/css/multi-select.css', rel='stylesheet')
    link(type='text/css', href='/assets/css/pages.css', rel='stylesheet')

block content
    body.widescreen.fixed-left-void
        #wrapper.forced
            .content-page
                .content
                    .container
                        // Page-Title
                        .row
                            .col-sm-12
                                .page-title-box
                                    ol.breadcrumb.pull-right
                                        li
                                            a(href='#') Home
                                        li
                                            a(href='#') SD 기본정보
                                        li.active 회사별 상위업무지정
                                    h4.page-title 회사별 상위업무지정
                        .row
                            .col-lg-12
                                .card-box
                                    form.form-horizontal.group-border-dashed(action='#', onsubmit='return false;')
                                        .form-group
                                            label.col-sm-2.control-label 회사명 
                                            .col-sm-4
                                                select.form-control(id='company_cd' name='company_cd')
                                                    option(value ='*') 선택되지 않음
                                                    - if (company.length > 0) {
                                                        - for( var i = 0 ; length = company.length > i ; i++ ){ //속도가 느리다고 알고 있음.
                                                            option(value ='#{company[i].company_cd}') #{company[i].company_nm}
                                                        - }
                                                    - } 
                                            .col-sm-2
                                                button.btn.btn-primary(id='searchBtn' type='button') 조회
                        // start Grid Area
                        .row
                            .col-sm-12
                                .card-box
                                    .row
                                        .col-sm-12
                                            button.btn.btn-primary.waves-effect.waves-light.pull-right(type='button')
                                                i.fa.fa-paper-plane.m-r-5
                                                | 저장
                                    hr.m-t-10.m-b-10
                                    .row
                                        .col-sm-12
                                            table.m-t-5(width='100%')
                                                tbody
                                                    tr
                                                        td(width='20%')
                                                            h4.pull-left
                                                                b 지정할 업무리스트
                                                        td(width='25%')
                                                            span.pull-right
                                                                button.btn.btn-xs.btn-inverse.m-r-5(type='button')
                                                                    i.fa.fa-check-square-o.m-r-5
                                                                    |  전체선택
                                                                button.btn.btn-xs.btn-default(type='button')
                                                                    i.fa.fa-square-o.m-r-5
                                                                    |  선택취소
                                                        td(width='10%')
                                                        td(width='20%')
                                                            h4.pull-left
                                                                b 회사별 상위업무
                                                        td(width='25%')
                                                            span.pull-right
                                                                button.btn.btn-xs.btn-inverse.m-r-5(type='button')
                                                                    i.fa.fa-check-square-o.m-r-5
                                                                    |  전체선택
                                                                button.btn.btn-xs.btn-default(type='button')
                                                                    i.fa.fa-square-o.m-r-5
                                                                    |  선택취소
                                            select#my_multi_select2.multi-select(name='my_multi_select2[]', data-plugin='multiselect', data-selectable-optgroup='true', multiple='multiple')
                                                - if (higherprocess.length > 0) {
                                                    - for( var i = 0 ; length = higherprocess.length > i ; i++ ){ //속도가 느리다고 알고 있음.
                                                        option(value ='#{higherprocess[i].higher_cd}') #{higherprocess[i].higher_nm}
                                                    - }
                                                - } 



extends ../layouts/default
block head
    //script(type='text/javascript').
        var processGubunObj = !{JSON.stringify(processGubun).replace(/<\//g, '<\\/')};
    script(src='/isu/js/processGubun/edit.js')

block content
    .content-page
        .content
            .container
                // Page-Title
                .row
                    .col-sm-12
                        .page-title-box
                            ol.breadcrumb.pull-right
                                li
                                    a(href='#') Home
                                li
                                    a(href='#') SD기본정보
                                li.active 하위업무 수정
                            h4.page-title 하위업무 수정
                .row
                    .col-sm-12
                        .card-box
                            .p-20
                                .btn-toolbar.form-group
                                    form.form-horizontal.group-border-dashed(id='processGubunForm' name='form' action='/processGubun/edit/#{processGubun._id}' method='post')
                                        .form-group
                                            .pull-left
                                                .btn.btn-primary.waves-effect.waves-light.m-l-5(onclick="location.href='/processGubun'")
                                                    i.fa.fa-list-ul
                                                    |  목록
                                                .btn.btn-primary.waves-effect.waves-light.m-l-5(onclick="location.href='/processGubun/delete/#{processGubun._id}'") 
                                                    i.fa.fa-remove
                                                    |  삭제
                                                .btn.btn-purple.waves-effect.waves-light.m-l-5(onclick="location.href='/processGubun'")
                                                    i.fa.fa-undo
                                                    |  취소
                                            .pull-right
                                                button.btn.btn-info(type='submit')
                                                    i.fa.fa-send-o
                                                    |  저장
                                        hr
                                        .form-group(style='display:none')
                                            label.col-sm-3.control-label 상위업무코드
                                            .col-sm-3
                                                input.form-control(name='processGubun[higher_cd]', type='text', placeholder='', value='#{processGubun.higher_cd}', disabled)
                                        .form-group
                                            label.col-sm-3.control-label 상위업무명
                                            .col-sm-3
                                                input.form-control(name='processGubun[higher_nm]', type='text', value='#{processGubun.higher_nm}', disabled)
                                        .form-group
                                            label.col-sm-3.control-label 하위업무코드
                                            .col-sm-3
                                                input.form-control(name='processGubun[lower_cd]', type='text', value='#{processGubun.lower_cd}')
                                        .form-group
                                            label.col-sm-3.control-label 하위업무명
                                            .col-sm-3
                                                input.form-control(name='processGubun[lower_nm]', type='text', value='#{processGubun.lower_nm}')
                                        .form-group
                                            label.col-sm-3.control-label 설명
                                            .col-sm-9
                                                input.form-control(name='processGubun[description]', type='text', value='#{processGubun.description}')
                                        .form-group
                                            label.col-sm-3.control-label 소요시간
                                            .col-sm-3
                                                input.form-control(name='processGubun[need_hour]', type='text', value='#{processGubun.need_hour}')
                                        .form-group(style='display:none')
                                            label.col-sm-3.control-label 회사코드
                                            .col-sm-3
                                                input.form-control(name='processGubun[company_cd]', type='text', value='#{processGubun.company_cd}')
                                        .form-group(style='display:none')
                                            label.col-sm-3.control-label 회사명
                                            .col-sm-3
                                                input.form-control(name='processGubun[company_nm]', type='text', value='#{processGubun.company_nm}')
                                        .form-group(style='display:none')
                                            label.col-sm-3.control-label 사번
                                            .col-sm-3
                                                input.form-control(name='processGubun[sabun]', type='text', value='#{processGubun.sabun}')
                                        .form-group(style='display:none')
                                            label.col-sm-3.control-label 등록자
                                            .col-sm-3
                                                input.form-control(name='processGubun[user_nm]', type='text', value='#{processGubun.user_nm}')
                                        .form-group
                                            label.col-sm-3.control-label 사용여부
                                            .col-sm-3
                                                select.form-control.input-sm(id='user_flag', name='processGubun[user_flag]')
                                                    option(value='사용' Selected) 사용 
                                                    option(value='미사용') 미사용
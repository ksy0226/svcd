block content
    .content-page
        // Start content
        .content
            .container
                // Page-Title
                .row
                    .col-sm-12
                        .page-title-box
                            ol.breadcrumb.pull-right
                                li
                                    a(href='#') Home
                                li
                                    a(href='#') 문의 및 담당자
                                li.active 문의하기
                            h4.page-title 문의하기
                // Form TYPE 1
                .row
                    .col-lg-12
                        .card-box
                            .p-20
                                form.form-horizontal.group-border-dashed(action='#')
                                    .form-group
                                        label.col-sm-2.control-label 서비스
                                        .col-sm-4
                                            select.form-control
                                                option 스마트오피스
                                                option eHR
                                                option Sap ERP
                                                option 네트워크
                                        label.col-sm-2.control-label 긴급구분
                                        .col-sm-2
                                            select.form-control
                                                option 긴급
                                                option 보통
                                    .form-group
                                        label.col-sm-2.control-label 요청완료일
                                        .col-sm-4
                                            .input-group
                                                .input-group
                                                    input#datepicker-autoclose.form-control(type='text', placeholder='yyyy/mm/dd')
                                                    span.input-group-addon.bg-primary.b-0.text-white
                                                        i.ion-calendar
                                        label.col-sm-2.control-label 공개여부
                                        .col-sm-2
                                            .checkbox.checkbox-primary.checkbox-single.p-t-10
                                                input#singleCheckbox1(type='checkbox', value='option1', aria-label='Single checkbox One')
                                                label
                                    .form-group
                                        label.col-sm-2.control-label 제목
                                        .col-sm-10
                                            input.form-control(type='text')
                                    .form-group
                                        .col-sm-12
                                            //.summernote
                                            textarea#summernote.form-control.textarea(placeholder='내용' name='incident[content]' value='') 
                                // start dropzone
                                .row
                                    .col-md-12.portlets
                                        // Your awesome content goes here
                                        .m-b-30
                                            form#dropzone.dropzone(action='#')
                                                .fallback
                                                    input(name='file', type='file', multiple='')
                                // end dropzone
                                .btn-toolbar.form-group.m-b-0
                                    .pull-right
                                        button.btn.btn-default.waves-effect.waves-light.m-r-5(type='reset') 취소
                                        button.btn.btn-primary.waves-effect.waves-light
                                            span 저장
                                            i.fa.fa-send.m-l-10
                // /. Form TYPE 1
                // Form TYPE 2
                .row
                    .col-lg-12
                        .card-box
                            .p-20
                                form(role='form')
                                    .form-group
                                        .row
                                            .col-md-6
                                                label 서비스
                                                select.form-control
                                                    option 스마트오피스
                                                    option eHR
                                                    option Sap ERP
                                                    option 네트워크
                                            .col-md-3
                                                label 긴급구분
                                                select.form-control
                                                    option 긴급
                                                    option 보통
                                    .form-group
                                        .row
                                            .col-md-6
                                                label 완료날짜
                                                .input-group
                                                    input#datepicker-autoclose.form-control(type='text', placeholder='yyyy/mm/dd')
                                                    span.input-group-addon.bg-primary.b-0.text-white
                                                        i.ion-calendar
                                            .col-md-3
                                                label
                                                .checkbox.checkbox-primary.m-l-15
                                                    input#checkbox2(type='checkbox')
                                                    label(for='checkbox2') 공개여부
                                    .form-group
                                        .row
                                            .col-md-12
                                                label 제목
                                                input.form-control(type='text')
                                    .form-group
                                        .row
                                            .col-md-12
                                                //.summernote
                                // start dropzone
                                .row
                                    .col-md-12.portlets
                                        // Your awesome content goes here
                                        .m-b-30
                                            form#dropzone.dropzone(action='#')
                                                .fallback
                                                    input(name='file', type='file', multiple='')
                                // end dropzone
                                .btn-toolbar.form-group.m-b-0
                                    .pull-right
                                        button.btn.btn-default.waves-effect.waves-light.m-r-5(type='reset') 취소
                                        button.btn.btn-primary.waves-effect.waves-light
                                            span 저장
                                            i.fa.fa-send.m-l-10
                // /. Form TYPE 2
                // end container
                // end content
                footer.footer.text-right

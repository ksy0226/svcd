            script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
    body
        // Full Page Image Background Carousel Header
        #myCarousel.carousel.slide
            // Indicators
            ol.carousel-indicators
                li.active(data-target='#myCarousel', data-slide-to='0')
                li(data-target='#myCarousel', data-slide-to='1')
                li(data-target='#myCarousel', data-slide-to='2')
            // Wrapper for Slides
            .carousel-inner
                .item.active
                    // Set the first background image using inline CSS below.
                    .fill(style='background-image:url(assets/images/bg_login_1.jpg)')
                .item
                    // Set the second background image using inline CSS below.
                    .fill(style='background-image:url(assets/images/bg_login_2.jpg)')
                .item
                    // Set the third background image using inline CSS below.
                    .fill(style='background-image:url(assets/images/bg_login_3.jpg)')
            // Controls
            //
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="icon-prev"></span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="icon-next"></span>
                </a>
        .wrapper-page
            .login-box
                .text-center
                    a.logo-lg(href='#')
                        img(src='assets/images/ci_isusystem.png', alt='isusystem')
                form.form-horizontal.m-t-20(action='/index' method='post' name='login')
                    fieldset
                        -if(message == null){
                            //h2 로그인하세요.
                        -}else{
                            h3 !{message}
                        -}
                        .form-group
                            .col-xs-12
                                input#email.form-control(type='email', name='email', value=('#{email}' == 'undefined' ? '' : '#{email}') placeholder='Email Address', required='')
                                i.md.md-account-circle.form-control-feedback.l-h-42
                        .form-group
                            .col-xs-12
                                input#password.form-control(type='password', name='password', placeholder='Password', required='')
                                i.md.md-vpn-key.form-control-feedback.l-h-42
                        .form-group
                            .col-xs-12
                                .checkbox.checkbox-primary
                                    input#remember_me(type='checkbox', name='remember_me', checked=('true'==='#{remember_me}' ? 'on' : undefined))
                                    label(for='remember_me')  아이디 저장 
                        .form-group.text-right.m-t-20
                            .col-xs-12
                                button.btn.btn-primary.btn-custom.w-md.waves-effect.waves-light(type='submit') 로그인
                        .form-group.m-t-30
                            .col-sm-7
                                a.text-muted.text-underline(href='pages-recoverpw.html')
                                    i.fa.fa-lock.m-r-10
                                    | 비밀번호 찾기
                            .col-sm-5.text-right
                                a.text-muted.text-underline(href='pages-register.html')
                                    i.md.md-person-add.m-r-10
                                    | 계정신청
            p.m-t.login-copy.text-white
                small
                    strong.m-r-5 Copyright
                    | ISU SYSTEM Co. Ltd. ALL RIGHT RESERVED. © 2017
        // end login-box

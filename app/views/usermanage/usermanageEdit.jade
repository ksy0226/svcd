extends ../layouts/default

block content
    .masthead.clearfix
        .inner
            h3.masthead-brand 수정
            nav
                ul.nav.masthead-nav
                    li.active
                        a(href='/usermanage') 목록
                
            form.form.col-md-12.center-block(name='form' action='/usermanage/#{usermanage._id}/usermanageEdit' method='post')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='Title' name='usermanage[title]' required value='#{usermanage.title}')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='작성자명' name='usermanage[name]' value='')
                .form-group
                    input.form-control.input-lg(type='email' placeholder='e-mail' name='usermanage[email]' value='')
                .form-group
                    input.form-control.input-lg(type='text' placeholder='아이디' name='usermanage[user_id]' value='')
                .form-group
                    textarea.form-control.textarea(placeholder='내용' name='usermanage[content]' style='height:150px' value='') #{usermanage.content}
                .form-group
                    button.btn.btn-success.btn-lg.btn-block(type='submit') 저장
                
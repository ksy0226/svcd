block content
      // ==============================================================
      // Start right Content here
      // ==============================================================
      .content-page
        // Start content
        .content
          .container
            // Page-Title
            .row
              .col-sm-12
                .page-title-box
                  ol.breadcrumb.pull-right
                    li
                      a(href='#') Home
                    li
                      a(href='#') SD 기본정보
                    li.active 상위업무조회
                  h4.page-title 상위업무조회
            .row
              .col-sm-12
                .card-box
                  .btn-toolbar.form-group
                    .pull-right
                      a.btn.btn-default.waves-effect.waves-light.m-l-5(href='/higherProcess/new')
                        i.fa.fa-plus
                        |  추가
                  table.table.table-hover(id='dvData' data-tablesaw-mode='swipe')
                    thead
                      tr
                        th(width='18%') 상위업무명
                        th 설명
                        th(width='18%') 등록일
                        th(width='10%') 사용여부
                    tbody
                        - if (higherProcess.length > 0) {
                            // - for( var i = 0 ; length = question.length > i ; i++ ){ //속도가 빠르다고 알고 있음.
                            - for( var i in higherProcess ){ //속도가 느리다고 알고 있음.
                                tr(onclick="onclick=location.href='/higherProcess/#{higherProcess[i]._id}/show'")
                                    td  #{higherProcess[i].higher_nm}  
                                    td.highlight(data-highlight='search.highlight.title') #{higherProcess[i].description}
                                    td #{higherProcess[i].created_at}
                                    td #{higherProcess[i].user_flag}
                            - }
                        - }else{
                            tr
                                td(colspan='5' align='center') 조회된 데이타가 없습니다.
                        - }  
            // end row
          // end container
        // end content
        footer.footer.text-right
          | 2017 © ISU Group.

{
    "appenders": [{
        "type": "clustered",
        "appenders": [{
                "type": "dateFile",
                "filename": "logs/access.log",
                "pattern": "-yyyy-MM-dd",
                "category": "http"
            },
            {
                "type": "file",
                "filename": "logs/app.log",
                "maxLogSize": 10485760,
                "numBackups": 3,
                "encoding" : "UTF-8"
            },
            {
                "type": "logLevelFilter",
                "level": "ERROR",
                "appender": {
                    "type": "file",
                    "filename": "logs/errors.log",
                    "encoding" : "UTF-8"
                }
            }
        ]
    }]
}
